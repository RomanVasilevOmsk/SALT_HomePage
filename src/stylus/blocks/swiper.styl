.swiper
  &-container
    width 100%
    max-width 1510px
    height 400px

  &-slide
    text-align center
    font-size 18px
    display -webkit-box
    display -ms-flexbox
    display -webkit-flex
    display flex
    -webkit-box-pack center
    -ms-flex-pack center
    -webkit-justify-content center
    justify-content center
    -webkit-box-align center
    -ms-flex-align center
    -webkit-align-items center
    align-items center

  &__content
    display flex
    flex-wrap wrap
    justify-content space-between
    width 100%
    height 250px
    max-width 1000px
    &-2
      flex-direction row-reverse
    @media (max-width: 790px)
        width 100%
        height 330px
        max-width 440px
        flex-direction column
    @media (max-width: 402px)
        height 390px

  &__desc-wrapper
    width 70%
    text-align left
    font-family 'Proxima Nova'
    height 150px
    @media (max-width: 790px)
      width 100%
      text-align center

  &__desc
    margin 0.4em 0 0 0.4em
    letter-spacing 0.006em
    font-size 0.9em
    line-height 1.9em
    @media (max-width: 460px)
      font-size 0.8em

  &__title
    font-weight 500
    font-size 3em
    letter-spacing 0.01em
    margin-top 0.9em
    @media (max-width: 790px)
      font-size 2em
    @media (max-width: 460px)
      font-size 1.7em


  &__button
    margin 44px 0 0 6px
    @media (max-width: 790px)
      margin-top 10px

  &__img-wrapper
    width 30%
    display flex
    flex-direction column
    justify-content flex-end
    @media (max-width: 790px)
      width 100%

  &__img
    margin 0 auto
    max-width 150px
    @media (max-width: 790px)
      max-width 90px


.swiper-container-vertical>.swiper-pagination-bullets .swiper-pagination-bullet
  width 16px
  height 18px
  background-color #fff0
  border-radius 0
  margin 15px 0 15px 1px
  opacity 1
  background-image url("data:image/png;base64,")
  background-size contain


.swiper-container-vertical>.swiper-pagination-bullets .swiper-pagination-bullet-active
  width 19px
  height 22px
  margin 15px 0
  background-image url("data:image/png;base64,")
  background-size contain

.swiper-container-vertical>.swiper-pagination-bullets
  top 63%
