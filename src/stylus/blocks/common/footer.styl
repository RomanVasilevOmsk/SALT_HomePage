.footer
  max-width 1256px
  margin 0 auto
  position relative
  background-color #fff
  color #1d1e1c
  padding 30px 0
  min-height 60px

  &__main-wrapper
    position absolute
    top 0
    background-color #fff
    min-height 108px
    width 100%
    display inline-block
    z-index 1
  &__contacts
    float right
    width 100%
    position absolute
    top 7px
    @media (max-width: 768px)
      padding-top 7px
      border none

  &__contacts-inner
    float right
    @media (max-width: 768px)
      float none
      max-width 325px
      margin 0 auto

  &__phone
    font-size 15px
    letter-spacing 0.01em
    text-align left
    color #1d1e1c
    text-decoration none
    font-weight 300
    @media (max-width: 768px)
      float none
    &:before
      content ""
      display inline-block
      width 13px
      height 13px
      margin 2px 5px 0 0
      background-image url("data:../images/base64/header-ico/phone-ico.jpg;base64,")


  &__mail
    font-weight 300
    color #1d1e1c
    font-size 16px
    margin 0
    text-align right
    text-decoration none
    float right
    padding-right 6px
    letter-spacing -0.02em
    &:before
      content ""
      display block
      width 15px
      height 13px
      float left
      margin 2px 6px 0 11px
      background-repeat no-repeat
      background-image url("data:../images/base64/header-ico/mail-ico.jpg;base64,")

  &__desc
    font-weight 400
    text-align left
    float left
    text-transform uppercase
    margin-top 18px
    max-width 600px
    font-size 17px
    letter-spacing 0.019em
    &--span
      font-weight 300
      font-size 23px
      letter-spacing -0.001em
      line-height 1.8em
    @media (max-width: 1150px)
      display none

  &__item
    top 18px
    &--left
      left 0
      position absolute
      z-index 1

    &--right
      right 0
      position absolute
      z-index 1
      width 100%
      max-width 77.4%
      @media (min-width: 993px) and (max-width: 1170px)
        max-width 925px
      @media (min-width: 768px) and (max-width: 992px)
        max-width 600px
      @media (max-width: 768px)
        top 0
        left 0
        margin 0 auto
        right unset
        width 100%
        text-align center
        margin 0 auto
        max-width 100%

    &--desc
      left 25%
      margin 0 auto
      position absolute
      z-index 1
      @media (max-width: 890px)
        display none


