.footer
  background-color #363636
  position relative

  &__wrapper
    max-width 1150px
    margin 0 auto
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-between
    padding 3.1em 0

  &__widget
    width 28%
    & iframe
      margin 0 auto
      display block!important
    @media (max-width: 768px)
      width 100%
      margin 0 auto

  &__nav
    display flex
    flex-direction row
    flex-wrap wrap
    width 64.5%
    justify-content space-around
    &-wrapper
      margin 0 0 0 4em
      flex 1 1 calc(33.33% - 4em)
      @media (max-width: 996px)
        margin 0
      &:nth-child(1)
        margin 0
        @media (max-width: 768px)
          margin auto
      @media (max-width: 768px)
        margin auto
        width 210px
        text-align center
    @media (max-width: 768px)
      width: 95%;
      margin: 1em auto 0 auto
    @media (max-width: 768px)
      flex-direction column


  &__nav-title
    color $buttonOrangeBg
    text-transform uppercase
    font-weight 500
    font-size 0.89em
    position relative
    margin 0.2em 0 0 1.2em
    letter-spacing 0.02em
    &:before
      content ""
      background-image url("data:image/png;base64,")
      width 17px
      height 17px
      position absolute
      display block
      left -17px
      top 3px
      background-repeat no-repeat
      background-size 9px 11px
      @media (max-width: 768px)
        display none
    @media (max-width: 768px)
      margin 1.2em 0 0 0


  &__items
    margin 0.92em 0 0 0
    padding 0
    list-style none
    @media (max-width: 768px)
      margin 0
  &__item
    font-weight 400
    text-transform uppercase
    letter-spacing -0.01em
    font-size 1.02em
    line-height 1.49em
    &-link
      text-decoration none
      color $whiteColorFont
      &:hover
        color $buttonOrangeBg
      &-mail
        font-size 0.7em
  &__ico
    background-image url("data:image/png;base64,")
    width 75px
    height 86px
    position absolute
    right 17px
    bottom 28px
    @media (max-width: 435px)
      display none