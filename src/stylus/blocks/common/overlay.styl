.overlay
  width 100%
  height 100%
  background rgba(0, 0, 0, .7)
  position fixed
  top 0
  left: 0
  z-index 999
  display none

  &__close
    position absolute
    right 10px
    top 25px
    width 32px
    height 32px
    opacity 0.4
    &:hover
      opacity 1
    &:before, &:after
      position absolute
      left 15px
      content ' '
      height 20px
      width 2px
      background-color $whiteColorFont

    &:before
      transform rotate(45deg)

    &:after
      transform rotate(-45deg)