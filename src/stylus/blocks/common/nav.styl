.nav
  margin 4.5em 1em 0 0
  display -webkit-flex
  display flex
  flex-wrap wrap
  @media (max-width: 768px)
    right 100%
    height 100%
    position fixed
    width 100%
    z-index 12
    top 0
    background-color #6249cf
    margin 0
    flex-direction column
    justify-content space-evenly
    align-items center


  &__itm
    font-family 'Proxima Nova'
    font-weight 500
    text-transform uppercase
    height 34px
    color $whiteColorFont
    text-decoration none
    max-width 110px
    font-size .88em
    margin-right 1.2em
    letter-spacing 0.1em
    display -webkit-flex
    display flex
    justify-content center
    align-items center
    position relative
    @media (max-width: 768px)
      border-bottom 1px solid #fff
      width 100%
    &:hover
      cursor pointer
      text-decoration none
      &:after
        content ""
        display block
        width 100%
        height 3px
        position absolute
        left 0
        right 0
        margin 0 auto
        bottom 0
        background-color $buttonOrangeBg
        @media (max-width: 768px)
          height 0