.header
  max-width 1200px
  margin 0 auto 0
  background-color #6249cf
  display flex
  flex-wrap wrap
  justify-content space-between
  position absolute
  width 100%
  left 0
  right 0
  z-index 2

  &__logo
    display flex
    flex none
    align-items center
    margin 2em 0 0 1.5em

  &__icon-close
    display none
    @media (max-width: 768px)
      width 50px
      height 50px
      background-size 70px
      background-repeat no-repeat
      background-image url("data:image/png;base64,")
      display none
      cursor pointer
      padding-left 10px
      padding-top 28px
      padding-bottom 6px
      position absolute
      top 42px
      z-index 14

  &__icon-menu
    display none
    @media (max-width: 768px)
      width 50px
      height 50px
      background-size 50px
      background-repeat no-repeat
      background-image url("data:image/png;base64,")
      display block
      color #fff
      cursor pointer
      font-family 'Open Sans', sans-serif
      font-size 20px
      padding-bottom 25px
      padding-left 25px
      padding-top 14px
      text-decoration none
      text-transform uppercase
      right 20px
      top 50px
      position absolute
      z-index 10