.feature
  background-color $whiteColorFont

  &__wrapper
    font-family 'Proxima Nova'
    width 100%
    max-width 1330px
    margin 0 auto
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center
    padding 2em 0


  &__title
    font-weight 500
    font-size 2.4em
    letter-spacing 0.015em
    color $purpleColorFont

  &__desc
    font-weight 400
    color $grayColorFont
    max-width 460px
    margin-top 0.8em
    font-size 0.95em
    letter-spacing -0.01em
    line-height 1.4em
    &-wrapper
      height 200px
      margin 1.6em 0 0 1.7em

  &__button
    margin-top 2.1em
    font-size 0.9em
    &:hover
      color $buttonOrangeBg

  &__img
    padding-top 4.7em