.feature
  background-color $whiteColorFont

  &__wrapper
    font-family 'Proxima Nova'
    width 100%
    max-width 1330px
    margin 0 auto
    display flex
    flex-wrap no-wrap
    justify-content space-between
    align-items center
    padding 2em 0 6.7em 0
    @media (max-width: 768px)
      flex-wrap wrap
      flex-direction column-reverse


  &__title
    font-weight 500
    font-size 2.4em
    letter-spacing 0.015em
    color $purpleColorFont

  &__desc
    font-weight 400
    color $grayColorFont
    max-width 460px
    margin-top 0.8em
    font-size 0.95em
    letter-spacing -0.01em
    line-height 1.4em
    &-wrapper
      height 220px
      margin 1.6em 0 0 1.7em

  &__button
    margin-top 2.1em
    font-size 0.9em
    &:hover
      color $buttonOrangeBg

  &__video-wrapper
    position relative
    width 100%
    max-width 760px

  &__img-wrapper
    width 100%
    max-width 720px
    margin-top 4.7em
    height 100%
    min-height 450px
    background-image url(../images/video-cont.jpg)
    background-size cover
    @media (max-width: 768px)
      margin 0 auto

  &__play
    background-image url("data:image/png;base64,")
    background-size contain
    position absolute
    display block
    width 86px
    height 86px
    left 2em
    right 0
    margin 0 auto
    top 45%
    @media (max-width: 768px)
      left 0

  &__video-title
    color $whiteColorFont
    font-family 'Raleway'
    font-weight 600
    text-transform uppercase
    text-align center
    left 2em
    position absolute
    right 0
    top 64%
    letter-spacing 0.04em
    font-size 1.1em
    @media (max-width: 768px)
      left 0

  &__video-desc
    color $whiteColorFont
    font-family 'Raleway'
    font-weight 700
    text-transform uppercase
    text-align center
    left 1.2em
    position absolute
    right 0
    top 69%
    letter-spacing .08em
    font-size 2.1em
    @media (max-width: 768px)
      font-size 1.1em
      left 0
