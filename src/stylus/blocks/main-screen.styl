.main-screen
  background-image url(../images/main.bg.jpg)
  background-repeat no-repeat
  background-size 100% 100%
  min-height 680px
  padding-top 132px
  position relative
  z-index 1

  &__bottom-wrapper
    position absolute
    max-width 120px
    margin 0 auto
    bottom 53px
    left 0
    right 0

  &__bottom-desc
    text-transform uppercase
    font-weight 500
    font-size 0.94em

  &__bottom-link
    width 61px
    height 71px
    background-image url("data:image/png;base64,")
    background-size contain
    display block
    margin 20px auto 0 auto
    cursor pointer


