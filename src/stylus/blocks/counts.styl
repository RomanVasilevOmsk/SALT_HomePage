.counts
  background-color $whiteColorFont
  padding 8em 0
  @media (max-width: 830px)
    padding 3em 0

  &__wrapper
    width 100%
    color $purpleColorFont
    max-width 890px
    margin 0 auto
    display flex
    flex-wrap wrap
    flex-direction row
    justify-content space-between
    align-items center
    font-family 'Proxima Nova'
    font-weight 500
    text-align center
    @media (max-width: 830px)
      flex-direction column
      justify-content space-between
      min-height 400px

  &__content-wrapper
    font-size 3.8em

  &__desc
    text-transform uppercase
    font-size 1em
    max-width 270px
    margin-top 10px