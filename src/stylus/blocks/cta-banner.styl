.cta-banner
  background-image url(../images/cta-banner-bg.jpg)
  background-repeat no-repeat
  background-size cover
  padding 4.84em 0

  &__wrapper
    max-width 1150px
    margin  auto
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-between
    align-items center
    @media (max-width: 768px)
      flex-direction column

  &__title
    color $whiteColorFont
    font-family 'Proxima Nova'
    font-weight 500
    font-size 2.5em
    @media (max-width: 768px)
      text-align center

  &__button
    font-size 0.9em
    margin 0.7em 0em 0 0
    padding 1.2em 2.5em
